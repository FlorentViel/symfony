{% extends 'base.html.twig' %}

{% block title %}Ajouter un évenement- {{parent()}} {% endblock %}

{% block body %}


<div class="well ml-4 mt-2">
    <h1 class ="ml-2">Formulaire</h1>
    
    {{form_start(form,  {'attr': {'novalidate' : 'novalidate', 'class': 'form-horizontal'}})}}
    {{ form_errors(form) }}



    <div class="form-group">

        {{  form_label(form.name, 'Choisiez un nom d\'évenement', {'label_attr': {'class' : 'col-sm-2 control-label'}}) }}
        
        <div class="col-sm-3">
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">

        {{  form_label(form.startAt, "L'évenement commence le : ", {'label_attr': {'class' : 'col-sm-2 control-label'}}) }}
        
        <div class="col-sm-4">
            {{ form_widget(form.startAt)}}
        </div>
    </div>

    <div class="form-group">
            {{  form_label(form.endAt, "L'évenement termine le : ", {'label_attr': {'class' : 'col-sm-2 control-label'}}) }}
        
        <div class="col-sm-4">
            {{ form_widget(form.endAt)}}
        </div>
    </div>

    <div class="form-group">

            {{  form_label(form.content, "Description", {'label_attr': {'class' : 'col-sm-2 control-label'}}) }}
        
            <div class="col-sm-5">
                {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows':'8'}}) }}
            </div>
    </div>

    <div class="form-group">

            {{  form_label(form.price, "Prix à l'entrée", {'label_attr': {'class' : 'col-sm-2 control-label'}}) }}
        
            <div class="col-sm-3">
                {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
            </div>
    </div>

    <div class="form-group">

        {{  form_label(form.posterFile, "Photo", {'label_attr': {'class' : 'col-sm-2 control-label'}}) }}
        
        <div class="col-sm-3">
            {{ form_widget(form.posterFile, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">

        {{  form_label(form.place, "Categorie de l'évenement", {'label_attr': {'class' : 'col-sm-2 control-label'}}) }}
        
        <div class="col-sm-3">
            {{ form_widget(form.place, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">

        {{  form_label(form.categories, "Catégorie(s) de l'évenement [Plusieurs choix possible]", {'label_attr': {'class' : 'col-sm-2 control-label'}}) }}
        
        <div class="col-sm-3">
            {{ form_widget(form.categories) }}
        </div>
    </div>

    <div class="form-group">
        
        <div class="col-sm-2">
            <button type="submit" class="btn btn-success">Ajouter</button>
        </div>
    </div>



    

</div>





    {{ form_end(form) }}



{% endblock %}
